<% if @movie.errors.any? %>
  Please fix the following errors:
  <% @movie.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for @movie do |f| %>
<p><%= f.label :title, 'Movie Name' %><br>
<%= f.text_field :title %></p>
<br>
<p><%= f.label :summary, 'Summary' %><br>
<%= f.text_field :summary %></p>
<br>
<p><%= f.label :youtube_embed_id, 'Youtube ID' %><br>
<%= f.text_field :youtube_embed_id %></p>
<br>
<p><%= f.label :thumbnail, 'Thumbnail (full path)' %><br>
<%= f.text_field :thumbnail %></p>
<br>
<%= f.submit "Submit" %>
<% end %>